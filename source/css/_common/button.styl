button
  border: none
  font-weight: 500
  outline: none
  disable-select()
  cursor: pointer

a.button
  font-weight: 500
  line-height: 1
  padding: 0.75rem 2rem
  border-radius: $border-button
  trans1: background
  font-size: $fs-15
  &.theme
    background: $color-theme
    color: var(--card)
    &:hover
      background: $color-hover
  &.start
    border-radius: 100px
    background: var(--text-p1)
    color: var(--card)

a[onclick]:hover
  cursor: pointer
